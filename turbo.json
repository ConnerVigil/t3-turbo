{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "dev": {
      "dependsOn": ["^db:generate"],
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^db:generate"]
    },
    "lint": {},
    "db:generate": {
      "inputs": ["packages/db/lib/prisma/schema.prisma"],
      "outputs": ["packages/db/lib/generated"]
    },
    "db:push": {
      "cache": false
    }
  },
  "globalEnv": ["PORT", "DATABASE_URL"]
}
